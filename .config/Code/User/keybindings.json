// Place your key bindings in this file to overwrite the defaults
[
// Test
{ "key": "ctrl+q d",              "command": "workbench.action.togglePanel" },
{ "key": "ctrl+q",                "command": "workbench.action.toggleSidebarVisibility" },
// Panels & visible modes
{ "key": "ctrl+shift+d",          "command": "workbench.view.debug" },
{ "key": "ctrl+shift+e",          "command": "workbench.view.explorer" },
{ "key": "ctrl+shift+g",          "command": "workbench.view.git" },
{ "key": "ctrl+shift+f",          "command": "workbench.view.search" },
{ "key": "ctrl+b",                "command": "workbench.action.toggleSidebarVisibility" },
{ "key": "f12",                   "command": "workbench.action.toggleFullScreen" },
{ "key": "ctrl+f12",              "command": "workbench.action.toggleSidebarVisibility" },
{ "key": "shift+f12",             "command": "workbench.action.togglePanel" },
// Search & replace
{ "key": "ctrl+f",                "command": "actions.find" },
{ "key": "ctrl+g",                "command": "workbench.view.search" },
{ "key": "ctrl+h",                "command": "editor.action.startFindReplaceAction" },
{ "key": "ctrl+shift+f",          "command": "workbench.action.search.toggleQueryDetails" },
{ "key": "ctrl+shift+g",          "command": "workbench.action.search.toggleQueryDetails" },
// Cursor navigation
{ "key": "alt+left",              "command": "workbench.action.navigateBack" },
{ "key": "alt+right",             "command": "workbench.action.navigateForward" },
{ "key": "ctrl+j",                "command": "workbench.action.gotoLine" },
// Search navigation
{ "key": "f3",                    "command": "editor.action.nextMatchFindAction",
                                     "when": "editorFocus" },
{ "key": "shift+f3",              "command": "editor.action.previousMatchFindAction",
                                     "when": "editorFocus" },
{ "key": "f4",                    "command": "editor.action.nextSelectionMatchFindAction",
                                     "when": "editorFocus" },
{ "key": "shift+f4",              "command": "editor.action.previousSelectionMatchFindAction",
                                     "when": "editorFocus" },
// Error markers
{ "key": "f2",                    "command": "editor.action.marker.next",
                                     "when": "editorFocus" },
{ "key": "shift+f2",              "command": "editor.action.marker.prev",
                                     "when": "editorFocus" },
// Folding
{ "key": "ctrl+shift+a",          "command": "editor.fold",
                                     "when": "editorFocus" },
{ "key": "ctrl+shift+alt+a",      "command": "editor.foldAll",
                                     "when": "editorFocus" },
{ "key": "ctrl+shift+z",          "command": "editor.unfold",
                                     "when": "editorFocus" },
{ "key": "ctrl+shift+alt+z",      "command": "editor.unfoldAll",
                                     "when": "editorFocus" },
// Undo/redo
{ "key": "ctrl+z",                "command": "undo",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+y",                "command": "redo",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+u",                   "when": "editorTextFocus" },
{ "key": "ctrl+shift+z",             "when": "editorTextFocus" },
// Intellisense
{ "key": "ctrl+t",                "command": "workbench.action.showAllSymbols" },
{ "key": "ctrl+shift+t",          "command": "workbench.action.gotoSymbol" },
{ "key": "ctrl+alt+t",            "command": "editor.action.previewDeclaration",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+d",                "command": "editor.action.goToDeclaration",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+shift+d",          "command": "editor.action.goToTypeDeclaration",
                                     "when": "editorTextFocus" },
{ "key": "ctrl+alt+d",            "command": "editor.action.openDeclarationToTheSide",
                                     "when": "editorTextFocus" },

// END
]
