[${PRIVATE:-$HOME}/doc]
checkout = git_clone ssh://olivier@rpi:/media/wdc/git/doc.git rpi 2>/dev/null || 
           git_clone ssh://olivier@oliv5kta.dtdns.net:443/media/wdc/git/doc.git rpi;
           annex_init && annex_init_hubic

bundle   = git_bundle "${PRIVATE:-$HOME}/repo/sync/git/bundle";
           annex_bundle "${PRIVATE:-$HOME}/repo/sync/git/bundle"

pull     = true
push     = true
sync     = annex_sync

download = annex_copy . --from hubic
upload   = annex_copy . --to hubic

status   = annex_status
diff     = annex_diff
gdm      = git difftool -y -t meld --

gitk     = gitk
gc       = git gc
meta     = git_meta
