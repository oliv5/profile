[${PRIVATE:-$HOME}/dev]
checkout = git_clone ssh://olivier@rpi:/media/wdc/git/dev.git rpi 2>/dev/null || 
           git_clone ssh://olivier@oliv5kta.dtdns.net:443/media/wdc/git/dev.git rpi;
           annex_init && annex_init_hubic

bundle   = git_bundle "${PRIVATE:-$HOME}/repo/sync/git/bundle"

pull     = git_pull rpi master
push     = git_push rpi master
sync     = true

download = annex_copy . --from hubic --auto
upload   = annex_copy . --to hubic --auto

status   = git status -s
diff     = annex_diff
gdm      = git difftool -y -t meld --

gitk     = gitk
gc       = git gc
meta     = git_meta
