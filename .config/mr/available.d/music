           git_clone ssh://olivier@oliv5kta.dtdns.net:443/media/wdc/media/music rpi;
           annex_init;
           git annex initremote hubic type=external externaltype=hubic encryption=none hubic_container=annex hubic_path=music embedcreds=no
status   = annex_status
sync     = annex_sync
gitk     = gitk
gdm      = git difftool -y -t meld --
gc       = git gc
diff     = annex_diff
