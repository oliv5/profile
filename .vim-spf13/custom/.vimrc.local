" General {
	set updatetime=1000  " Swap file write / CursorHold  evt delay (in ms)
" }

" UI settings, theme & color scheme {
	if has('syntax')
		colorscheme torte
		syntax on
	endif
	set nocursorline
	set nu
	set scrolloff=10
" }

" Use after config if available {
	if filereadable(expand("~/.vim-legacy/.vimrc.after"))
		source ~/.vim-legacy/.vimrc.after
	endif
" }
